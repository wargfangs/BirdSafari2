{% trans_default_domain 'FOSUserBundle' %}
{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}

	<div class="login-container">
	
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		
			<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				<img src="../img/fake_logo.svg" alt="fake_logo" height="50" class="fake_logo">
				<h1>Bienvenue</h1><br>
				
					<p>Entrez un email ou un identifiant valide pour vous connecter.</p>
												{# User informations #}
					<form>
						<label for="username">{{ 'security.login.username'|trans }}</label>
						<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
						<label for="password">{{ 'security.login.password'|trans }}</label>
						<input type="password" id="password" name="_password" required="required" />
						<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
						<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
						<div class="g-recaptcha" data-sitekey="6LeivjIUAAAAANwUBcnp6aM0tsjlua6jPsYoJPZn"></div>
						<input type="submit" class="login login-submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
					</form>
												{# User Help buttons #}
					<div class="loginHelp">
						<label for="reset_password">{{ 'security.login.reset_password'|trans }}</label>
						<a href="{{ path('fos_user_resetting_request') }}"><input type="button" id="reset_password" name="_reset_password" class="userButton" value="Envoyer par email"></a>
						<label for="register">{{ 'security.login.register'|trans }}</label>
						<a href="{{ path('fos_user_registration_register') }}"><input type="button" id="register" name="_register" class="userButton" value="Rejoignez nous"> </a> 

					</div>
			 </form>
	</div>
{% endblock fos_user_content %}


